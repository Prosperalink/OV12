# Google Workspace API Configuration
# Copy this file to .env.local and fill in your actual API keys

# Google OAuth 2.0 Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# Gmail API Configuration
GMAIL_API_KEY=your_gmail_api_key_here
GMAIL_FROM_EMAIL=hello@orsonvision.com

# Google Drive API Configuration
GOOGLE_DRIVE_API_KEY=your_drive_api_key_here
GOOGLE_DRIVE_PROJECT_FOLDER_ID=your_project_folder_id_here
GOOGLE_DRIVE_ASSET_FOLDER_ID=your_asset_folder_id_here

# Google Calendar API Configuration
GOOGLE_CALENDAR_API_KEY=your_calendar_api_key_here
GOOGLE_CALENDAR_ID=your_calendar_id_here
GOOGLE_CALENDAR_MEETING_DURATION=60

# Google Sheets API Configuration
GOOGLE_SHEETS_API_KEY=your_sheets_api_key_here
GOOGLE_SHEETS_CRM_SHEET_ID=your_crm_sheet_id_here
GOOGLE_SHEETS_ANALYTICS_SHEET_ID=your_analytics_sheet_id_here

# Google Docs API Configuration
GOOGLE_DOCS_API_KEY=your_docs_api_key_here
GOOGLE_DOCS_TEMPLATE_FOLDER_ID=your_template_folder_id_here

# Google Meet API Configuration
GOOGLE_MEET_API_KEY=your_meet_api_key_here

# Application Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=Orson Vision

# Database Configuration (for future use)
DATABASE_URL=your_database_url_here

# Email Configuration (for fallback)
SMTP_HOST=your_smtp_host_here
SMTP_PORT=587
SMTP_USER=your_smtp_user_here
SMTP_PASS=your_smtp_password_here

# Analytics Configuration
GOOGLE_ANALYTICS_ID=your_ga_id_here
GOOGLE_TAG_MANAGER_ID=your_gtm_id_here

# Security Configuration
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_DEBUG_MODE=true 