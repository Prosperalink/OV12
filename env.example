# Orson Vision Environment Configuration
# Copy this file to .env.local and fill in your values

# ===== GOOGLE WORKSPACE INTEGRATION =====

# Google OAuth 2.0 Configuration
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
NEXT_PUBLIC_GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

# Google API Key (for additional services)
NEXT_PUBLIC_GOOGLE_API_KEY=your_google_api_key_here

# Google Sheets CRM
GOOGLE_SHEETS_CRM_ID=your_google_sheets_crm_id_here

# ===== EMAIL CONFIGURATION =====

# Admin email for contact form notifications
ADMIN_EMAIL=contact@orsonvision.com

# ===== AI INTEGRATION (PHASE 2) =====

# OpenAI API (for content generation)
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face API (for specific AI tasks)
HUGGING_FACE_API_KEY=your_hugging_face_api_key_here

# ===== DATABASE & STORAGE =====

# Supabase (free tier)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ===== MEDIA STORAGE =====

# Cloudinary (free tier)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# ===== ANALYTICS & MONITORING =====

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# ===== SECURITY =====

# JWT Secret (for authentication)
JWT_SECRET=your_jwt_secret_here

# ===== DEVELOPMENT =====

# Development mode
NODE_ENV=development

# Port configuration
PORT=3000

# ===== PERFORMANCE =====

# Bundle analyzer
ANALYZE=false

# ===== FEATURE FLAGS =====

# Enable/disable features
NEXT_PUBLIC_ENABLE_AI_FEATURES=false
NEXT_PUBLIC_ENABLE_GOOGLE_WORKSPACE=true
NEXT_PUBLIC_ENABLE_MULTILINGUAL=false

# ===== CONTENT MANAGEMENT =====

# CMS API (if using external CMS)
NEXT_PUBLIC_CMS_API_URL=your_cms_api_url_here
CMS_API_KEY=your_cms_api_key_here

# ===== PAYMENT PROCESSING (PHASE 3) =====

# Stripe (for e-commerce)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ===== SOCIAL MEDIA =====

# Social media API keys (if needed)
TWITTER_API_KEY=your_twitter_api_key_here
LINKEDIN_API_KEY=your_linkedin_api_key_here
INSTAGRAM_API_KEY=your_instagram_api_key_here

# ===== SEO & METADATA =====

# Site metadata
NEXT_PUBLIC_SITE_URL=https://orsonvision.com
NEXT_PUBLIC_SITE_NAME=Orson Vision
NEXT_PUBLIC_SITE_DESCRIPTION=Cinematic Humanism in Digital Innovation

# ===== MONITORING & LOGGING =====

# Sentry (error tracking)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# LogRocket (session replay)
NEXT_PUBLIC_LOGROCKET_APP_ID=your_logrocket_app_id_here

# ===== TESTING =====

# Test environment variables
NEXT_PUBLIC_TEST_MODE=false
TEST_EMAIL=test@orsonvision.com

# ===== DEPLOYMENT =====

# Vercel deployment
VERCEL_URL=your_vercel_url_here
VERCEL_GIT_COMMIT_SHA=your_git_commit_sha_here

# ===== CUSTOMIZATION =====

# Brand colors (can be overridden)
NEXT_PUBLIC_BRAND_PRIMARY_COLOR=#1e3a8a
NEXT_PUBLIC_BRAND_SECONDARY_COLOR=#f59e0b

# Contact information
NEXT_PUBLIC_CONTACT_EMAIL=contact@orsonvision.com
NEXT_PUBLIC_CONTACT_PHONE=+216 XX XXX XXX
NEXT_PUBLIC_CONTACT_ADDRESS=Tunis, Tunisia

# ===== PERFORMANCE OPTIMIZATION =====

# Image optimization
NEXT_PUBLIC_IMAGE_OPTIMIZATION_ENABLED=true
NEXT_PUBLIC_IMAGE_QUALITY=85

# Caching
NEXT_PUBLIC_CACHE_DURATION=3600

# ===== ACCESSIBILITY =====

# Accessibility features
NEXT_PUBLIC_ENABLE_SCREEN_READER=true
NEXT_PUBLIC_ENABLE_KEYBOARD_NAVIGATION=true

# ===== INTERNATIONALIZATION =====

# Language settings
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,fr,ar

# ===== SECURITY HEADERS =====

# Content Security Policy
NEXT_PUBLIC_CSP_NONCE=your_csp_nonce_here

# ===== BACKUP & RECOVERY =====

# Backup configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30

# ===== NOTIFICATIONS =====

# Notification settings
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=false
PUSH_NOTIFICATIONS_ENABLED=false

# ===== INTEGRATIONS =====

# Third-party integrations
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ===== DEVELOPMENT TOOLS =====

# Development utilities
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_ERROR_BOUNDARY=true

# ===== CUSTOM SCRIPTS =====

# Custom script injection
NEXT_PUBLIC_CUSTOM_SCRIPTS_ENABLED=false
NEXT_PUBLIC_GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# ===== ENVIRONMENT SPECIFIC =====

# Production overrides
NEXT_PUBLIC_PRODUCTION_MODE=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CRASH_REPORTING=true

# ===== LEGAL & COMPLIANCE =====

# Privacy and legal
NEXT_PUBLIC_PRIVACY_POLICY_URL=https://orsonvision.com/privacy
NEXT_PUBLIC_TERMS_OF_SERVICE_URL=https://orsonvision.com/terms
NEXT_PUBLIC_COOKIE_POLICY_URL=https://orsonvision.com/cookies

# GDPR compliance
NEXT_PUBLIC_GDPR_COMPLIANT=true
NEXT_PUBLIC_COOKIE_CONSENT_ENABLED=true

# ===== MAINTENANCE =====

# Maintenance mode
NEXT_PUBLIC_MAINTENANCE_MODE=false
NEXT_PUBLIC_MAINTENANCE_MESSAGE=Site under maintenance. Please check back soon.

# ===== FEATURE TOGGLES =====

# Feature flags for A/B testing
NEXT_PUBLIC_FEATURE_NEW_HERO_SECTION=false
NEXT_PUBLIC_FEATURE_ENHANCED_ANIMATIONS=true
NEXT_PUBLIC_FEATURE_ADVANCED_FORMS=true
NEXT_PUBLIC_FEATURE_AI_CHAT=false
NEXT_PUBLIC_FEATURE_LIVE_CHAT=false

# Database Configuration (if needed)
DATABASE_URL=your_database_url_here

# Email Configuration
SMTP_HOST=your_smtp_host_here
SMTP_PORT=587
SMTP_USER=your_smtp_user_here
SMTP_PASS=your_smtp_password_here

# Analytics
NEXT_PUBLIC_GA_ID=your_google_analytics_id_here

# Development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Performance Monitoring
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
